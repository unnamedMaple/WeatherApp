<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/click"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="城市:"
            android:textColor="@android:color/background_light"

            android:textSize="24sp" />


        <TextView
            android:id="@+id/cityname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="14dp"
            android:text="北京"

            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:layout_weight="0.60" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:text="" />

        <Button
            android:id="@+id/shareB"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@drawable/title_share"
            android:text="" />

        <Button
            android:id="@+id/refresh"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@drawable/title_update"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="291dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.63"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/todaytemperature"
                        android:layout_width="200dp"
                        android:layout_height="205dp"
                        android:paddingTop="70dp"
                        android:text="24C"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="48sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="203dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/todaystatus"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:text="质量"
                        android:textColor="@android:color/background_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/todaywinddir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:text="风向"
                        android:textColor="@android:color/background_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/todayUV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.41"
                        android:text="紫外线"
                        android:textColor="@android:color/background_light"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="212dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:text="明\n天"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tomorrowW"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="25C\n天气温和"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:text="后\n天"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/thirdW"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="25C\n天气温和"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="379dp"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:text="出行建议:"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/outAdvice"
                    android:layout_width="226dp"
                    android:layout_height="match_parent"
                    android:text="适宜出行"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="383dp"
                android:layout_height="81dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:text="饮食建议:"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/eatingAdvice"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:text="适宜清淡"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>